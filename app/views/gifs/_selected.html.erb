<!-- Selected-Gif Modal -->
<div class="modal fade" id="selected-modal-<%=g.id%>" tabindex="-1" role="dialog" aria-labelledby="SelectedLabel">
<div class="modal-dialog" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <h4 class="login-title" id="LoginLabel"><%=g.title%></h4>
    </div>

    <div class="modal-body">
        <h3>Url:</h3>
        <h5><%=g.url%></h5>
      <br>
      <%=image_tag(g.url)%>
      <br>
      <h5>Uploaded by: <%=g.author%></h5>
      <h5>Submitted at: <%=g.created_at.strftime("%l:%M%p %m/%d/%Y")%></h5>
    </div>

    <div class="modal-footer">
      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    </div>
  </div>
</div>
</div>
