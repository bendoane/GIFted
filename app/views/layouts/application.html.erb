<!DOCTYPE html>
<html>
<head>
  <title>Gruff20</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
  <body>
    <div>
      <% if current_user%>
        <div id = "nav_left">
          <%= link_to "Edit Profile", edit_user_path(current_user.id)%>
        </div>
        <div id="nav_right">
          <%= link_to "Logout", :logout%>
        </div>
      <%else%>
        <div id ="nav_left">
          <%= link_to "Sign up!", new_user_path%>
        </div>
        <div id ="nav_right">
          <%= link_to "Login", :login%>
        </div>
        <%end%>
    </div>
    <div id="title_img">
      <img src="gifts-header.jpg">
    </div>
    <div class = "title">
      <a href=<%=root_url%>><h1>GIFt</h1></a>
    </div>

  <%= yield %>

  </body>
</html>
